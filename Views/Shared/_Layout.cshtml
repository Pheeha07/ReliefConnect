<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReliefConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReliefConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color:#6f42c1;">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="ReliefConnect" style="height:40px; margin-right:10px;" />
                        ReliefConnect
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <!-- LEFT side menu -->
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="ReliefProjects" asp-action="Index">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="IncidentReports" asp-action="Index">Incidents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Donations" asp-action="Index">Donations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="VolunteerTasks" asp-action="Index">Volunteer Tasks</a>
                            </li>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="VolunteerAssignments" asp-action="My">My Assignments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Profiles" asp-action="My">My Profile</a>
                                </li>
                            }
                        </ul>

                        <!-- RIGHT side (auth) -->
                        <ul class="navbar-nav">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item d-flex align-items-center text-white">
                                    <span class="navbar-text me-2">Hello, @User.Identity.Name!</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-area="Identity" asp-page="/Account/Logout"
                                          asp-route-returnUrl="@(Url.Action("Index", "Home", new { area = "" }))"
                                          method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <div>
                <span>&copy; @DateTime.Now.Year - ReliefConnect</span> |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div>
                <a href="mailto:support@reliefconnect.org" class="me-3 text-decoration-none" style="color:#6f42c1;">
                    📧 support@reliefconnect.org
                </a>
                <a href="https://facebook.com" target="_blank" class="me-2" style="color:#6f42c1;">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="me-2" style="color:#6f42c1;">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://instagram.com" target="_blank" style="color:#6f42c1;">
                    <i class="bi bi-instagram"></i>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
