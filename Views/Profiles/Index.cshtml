@model IEnumerable<ReliefConnect.Models.Profile>
@{
    ViewData["Title"] = "Profiles";
}
<h2>Profiles</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.FullName</td>
                <td>@p.Email</td>
                <td>@p.Phone</td>
                <td>@p.Role</td>
                <td>@p.CreatedAt</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
